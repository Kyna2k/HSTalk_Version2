<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="model"
            type="com.example.hstalk_version2.model.user.User" />
    </data>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="19dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="18dp"
        android:background="@drawable/background_support"
        android:gravity="center_vertical">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/border_teacher"
                android:layout_width="70dp"
                android:layout_height="70dp"
                bind:avatar="@{model.avt}"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.tenhocvien}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="@font/interbold" />
            <TextView
                android:id="@+id/mota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="13dp"
                android:textStyle="italic"
                android:fontFamily="@font/interregular"/>
            <Button
                android:id="@+id/btn_call"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:text="Kết nối"
                android:textSize="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/border_btn_start"/>
        </LinearLayout>
    </LinearLayout>
</layout>
