<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.example.hstalk_version2.model.baihoc.BaiHoc" />
    </data>
    <LinearLayout
        android:id="@+id/btn_baihoc"
        android:layout_width="match_parent"
        android:layout_height="83.74dp"
        android:orientation="horizontal"
        android:paddingHorizontal="19.2dp"
        android:layout_marginHorizontal="22.8dp"
        android:elevation="100dp"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/border_item_lession"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="14.78dp"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.tenbaihoc}"
                android:textColor="#000000"
                android:textSize="16dp"
                android:fontFamily="@font/interbold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 phút"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/interregular"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_kiemtra"
            android:textSize="14sp"
            android:text="Kiểm tra"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>
