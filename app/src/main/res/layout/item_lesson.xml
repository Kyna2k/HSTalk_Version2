<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="83.74dp"
    android:orientation="horizontal"
    android:paddingHorizontal="19.2dp"
    android:layout_marginHorizontal="22.8dp"
    android:background="@drawable/border_item_lession"
    android:outlineSpotShadowColor="#45C6EE"
    android:elevation="100dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="38.4dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kí hiệu chữ cái A"
            android:textColor="#000000"
            android:textSize="16dp"
            android:fontFamily="@font/interbold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 phút"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/interthin"
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>