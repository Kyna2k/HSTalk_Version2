<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.example.hstalk_version2.model.baihoc.BaiHoc" />
    </data>
    <LinearLayout
        android:id="@+id/btn_baihoc"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:paddingHorizontal="19.2dp"
        android:layout_marginHorizontal="22.8dp"
        android:elevation="5dp"
        android:gravity="center"
        android:background="@drawable/border_item_lession"
        android:layout_marginBottom="14.78dp"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="21dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.tenbaihoc}"
                android:textColor="#000000"
                android:textSize="17dp"
                android:fontFamily="@font/interbold" />
            <ImageView
                android:layout_marginTop="9.97dp"
                android:src="@drawable/button_kiemtra"
                android:id="@+id/btn_kiemtra"
                android:layout_width="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    <ImageView

        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/playvideo"
        android:layout_marginTop="3dp"
        android:src="@drawable/group_12091"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>
