<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="26dp"
    tools:context=".views.SelectLoginActivity">

    <include
        layout="@layout/header_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_m_loginemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="59dp"
            android:background="@drawable/button_select_login"
            android:drawableStart="@drawable/rezide_icon_human"
            android:fontFamily="@font/intermedium"
            android:lineHeight="18dp"
            android:paddingStart="32dp"
            android:paddingRight="34dp"
            android:text="Đăng nhập bằng email"
            android:textColor="@drawable/color_text_pressed_login"
            android:textFontWeight="700"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_m_loginphone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_select_login"
            android:drawableStart="@drawable/rezide_icon_phone"
            android:fontFamily="@font/intermedium"
            android:lineHeight="18dp"
            android:paddingStart="32dp"
            android:paddingRight="34dp"
            android:text="Đăng nhập bằng SĐT"
            android:textColor="@drawable/color_text_pressed_login"
            android:textFontWeight="700"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_select_login"
            android:drawableStart="@drawable/rezide_icon_fb"
            android:fontFamily="@font/intermedium"
            android:lineHeight="18dp"
            android:paddingStart="32dp"
            android:paddingRight="34dp"
            android:text="Đăng nhập bằng email"
            android:textColor="@drawable/color_text_pressed_login"
            android:textFontWeight="700"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_select_login"
            android:drawableStart="@drawable/rezide_icon_gg"
            android:fontFamily="@font/intermedium"
            android:lineHeight="18dp"
            android:paddingStart="32dp"
            android:paddingRight="34dp"
            android:text="Đăng nhập bằng google"
            android:textColor="@drawable/color_text_pressed_login"
            android:textFontWeight="700"
            android:textSize="15dp" />

    </LinearLayout>

    <include
        android:id="@+id/btn_bottom_sign"
        layout="@layout/bottom_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp" />
</LinearLayout>